<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="pos_config_view_form_inherit_gas" model="ir.ui.view">
        <field name="name">pos.config.form.view.inherit.gas</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@id='restaurant_on_create']"
                position="after">
                <div id="is_gas_setting" class="row mt16 o_settings_container">
                    <setting>
                            <div id="is_gas_station_div" class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="is_gas_station" />
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="is_gas_station" />
                                </div>
                            </div>
                    </setting>
                </div> 
            </xpath>
        </field>
    </record>
</odoo>